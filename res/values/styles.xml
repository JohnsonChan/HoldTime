<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme" parent="@android:style/Theme"></style>

    <style name="Theme.Tabhost">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TextView"></style>

    <style name="TextView.Small">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextView.Small.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView.Small.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextView.Middle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView.Middle.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView.Middle.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="StatusBarBackground">
        <item name="android:background">#778899</item>
    </style>

    <style name="XWindowTitle" parent="">
        <item name="android:shadowColor">#BB000000</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item> <!-- 是否半透明 -->
    </style>

    <!-- name 是Style的名称，parent 继承那个父类样式 -->

    <style name="gtd_no_title">
        <item name="android:windowNoTitle">true</item> <!-- 设置无标题 -->
    </style>

    <style name="gtd_no_title_full">
        <item name="android:windowNoTitle">true</item> <!-- 设置无标题 -->
        <item name="android:windowFullscreen">?android:windowNoTitle</item>
    </style>

    <style name="wxf_anim_fade">
        <item name="android:windowEnterAnimation">@anim/vip_fade_in</item>
        <item name="android:windowExitAnimation">@anim/vip_fade_out</item>
    </style>

    <style name="text_shadow">
        <item name="android:shadowColor">@android:color/white</item> <!-- 设置无标题 -->
        <item name="android:shadowRadius">1.0</item> <!-- 设置无标题 -->
        <item name="android:shadowDx">1.2</item> <!-- 设置无标题 -->
        <item name="android:shadowDy">1.2</item> <!-- 设置无标题 -->
    </style>

    <style name="popwin_animation">
        <item name="android:windowEnterAnimation">@anim/popwin_show</item>
        <item name="android:windowExitAnimation">@anim/popwin_hide</item>
    </style>

</resources>